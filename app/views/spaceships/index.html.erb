<table class="table table-striped table-bordered table-sm">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Edit</th>
    <th scope="col">Delete</th>
  </tr>
  </thead>
  <tbody>
  <% @spaceships.each do |spaceship| %>
    <tr>
      <td><%= link_to spaceship.title, spaceship_path(spaceship) %></td>
      <% if policy(Spaceship).edit? %>
        <td><%= link_to 'Edit', edit_spaceship_path(spaceship), class: "btn btn-warning" %></td>
      <% else %>
        <td><%= link_to 'Edit (blocked)', spaceships_path, class: "btn btn-warning" %></td>
      <% end %>
      <% if policy(Spaceship).destroy? %>
        <td><%= link_to 'Delete', spaceship_path(spaceship), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></td>
      <% else %>
        <td><%= link_to 'Delete (blocked)', spaceships_path, class: "btn btn-danger"%></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<% if policy(Spaceship).new? %>
<%= link_to 'Create', new_spaceship_path, class: 'btn btn-success btn-block' %>
<% end %>