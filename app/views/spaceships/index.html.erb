<table class="table table-striped table-bordered table-sm">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Edit</th>
    <th scope="col">Delete</th>
  </tr>
  </thead>
  <tbody>
  <%= render partial: 'spaceships/spaceship', collection: @spaceships %>
  </tbody>
</table>
<% if policy(Spaceship).new? %>
  <h2>Creating spaceship:</h2>
  <button type="button" class="btn btn-block btn-success" data-toggle="modal" data-target="#exampleModal">
    Create New Spaceship
  </button>
<% end %>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create New Spaceship</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>